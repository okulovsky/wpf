<Window x:Class="S12"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="L3S08" SizeToContent="WidthAndHeight">
    <GroupBox>
        <GroupBox.Header>
            <StackPanel Orientation="Horizontal">
                <Rectangle Width="10" Height="10" Fill="Green"/>
                <Label>Control</Label>
            </StackPanel>
        </GroupBox.Header>
        <StackPanel Orientation="Horizontal">
            <Button>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="10" Height="10" Fill="Red"/>
                    <Label>Record</Label>
                </StackPanel>
            </Button>
            <Button>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="5" Height="10" Fill="Black"/>
                    <Rectangle Width="3" Height="10"/>
                    <Rectangle Width="5" Height="10" Fill="Black"/>
                    <Label>Pause</Label>
                </StackPanel>
            </Button>
            <Button>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="10" Height="10" Fill="Black"/>
                    <Label>Stop</Label>
                </StackPanel>
            </Button>

        </StackPanel>
    </GroupBox>
    
</Window>
