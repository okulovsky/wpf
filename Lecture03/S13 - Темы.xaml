<Window x:Class="S13"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="300" Width="300">
    <Window.Resources>
        <ResourceDictionary Source="/PresentationFramework.Luna, Version=3.0.0.0,
           Culture=neutral, PublicKeyToken=31bf3856ad364e35,
           ProcessorArchitecture=MSIL;component/themes/luna.normalcolor.xaml" />
    </Window.Resources>
    <TabControl>
        <TabItem Header="Занятость">
            <GroupBox Header="График работы">
                <StackPanel>
                    <RadioButton>Полный рабочий день</RadioButton>
                    <RadioButton>Полставки</RadioButton>
                    <RadioButton>Свободный график</RadioButton>
                </StackPanel>
            </GroupBox>    
        </TabItem>
        <TabItem Header="Бухгалтерские данные">
            <StackPanel>
                <Expander Header="Банк">
                    <StackPanel>
                        <Label>Наименование банка</Label>
                        <TextBox></TextBox>
                        <Label>Номер счета</Label>
                        <TextBox></TextBox>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
