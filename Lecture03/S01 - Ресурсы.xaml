<Window x:Class="S01"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="Height" Width="300">
    <Window.Resources>
        <SolidColorBrush x:Key="brush" Color="LightBlue" />
    </Window.Resources>
    <StackPanel>
        <Label Background="{StaticResource brush}">Фамилия, имя, отчество</Label>
        <TextBox Background="{StaticResource brush}"/>
        <Button Content="OK" Background="{StaticResource brush}" Width="60"/>
    </StackPanel>
</Window>