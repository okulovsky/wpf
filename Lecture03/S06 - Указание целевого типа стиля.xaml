<Window x:Class="L2S03"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="L2S03" Height="300" Width="300">
    <Window.Resources>
        <Style x:Key="myStyle" TargetType="Label">
            <Setter Property="Control.Background" Value="DarkGray"/>
            <Setter Property="Control.Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    <StackPanel>
        <Label Style="{StaticResource myStyle}">Имя, фамилия, отчество</Label>
        <TextBox Style="{StaticResource myStyle}"/>
    </StackPanel>
</Window>
