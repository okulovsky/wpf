<Window x:Class="L3S03"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="L3S03" Height="300" Width="500">
    <FlowDocument>
        <Table BorderBrush="Black" BorderThickness="1" >
            <Table.Columns>
                <TableColumn Width="*"/>
                <TableColumn Width="*"/>
                <TableColumn Width="*"/>
            </Table.Columns>
            <Table.RowGroups>
                <TableRowGroup Name="rows">
                    <TableRow Background="AliceBlue">
                        <TableCell ColumnSpan="3" TextAlignment="Center">
                            <Paragraph>Площадь и население городов</Paragraph>
                            </TableCell>
                    </TableRow>
                    <TableRow>
                        <TableCell>
                            <Paragraph>Москва</Paragraph>
                        </TableCell>
                        <TableCell>
                            <Paragraph>2500 кв. км
                            </Paragraph>
                        </TableCell>
                        <TableCell>
                            <Paragraph>11 млн</Paragraph>
                        </TableCell>
                    </TableRow>
                </TableRowGroup>
            </Table.RowGroups>
        </Table>
    </FlowDocument>
</Window>
