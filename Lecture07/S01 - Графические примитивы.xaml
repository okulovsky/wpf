<Window x:Class="L1S01"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="L1S01" Height="300" Width="300">
    <StackPanel HorizontalAlignment="Center">
        <Rectangle Width="100" Height="50" Fill="AliceBlue" Stroke="Aquamarine" StrokeThickness="5"/>
        <Ellipse Width="100" Height="50" Fill="Beige"/>
        <Line X1="0" Y1="0" X2="100" Y2="50" Stroke="Black"/>
        <Polygon Stroke="Black"  Fill="Bisque" StrokeThickness="3">
            <Polygon.Points>
                <Point X="50" Y="0"/>
                <Point X="100" Y="50"/>
                <Point X="0" Y="50"/>
            </Polygon.Points>
        </Polygon>
        <Polyline Stroke="Red">
            <Polyline.Points>
                <Point X="0" Y="50"/>
                <Point X="33" Y="10"/>
                <Point X="66" Y="40"/>
                <Point X="100" Y="0"/>
            </Polyline.Points>
        </Polyline>
    </StackPanel>
</Window>
